@model StudyAbroad.Web.Models.PaginationSet<StudyAbroad.Web.Models.ProgramViewModel>
@{
    ViewBag.Title = "Chương trình - Dịch vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="ctl00_divAlt1" class="altcontent1 container cmszone">
    <div class='row Module Module-141'>
        <ol class='breadcrumb'>
            <li itemscope itemtype='http://data-vocabulary.org/Breadcrumb'><a href='/' class='itemcrumb' itemprop='url'><span itemprop='title'>Trang chủ</span></a></li>
            <li itemscope itemtype='http://data-vocabulary.org/Breadcrumb'><a href='/chuong-trinh-dich-vu' class='itemcrumb active' itemprop='url'><span itemprop='title'>Chương trình - Dịch vụ</span></a></li>
        </ol>
    </div>
</div>
<main class="main container">
    <section class="row">
        <div id="ctl00_divCenter" class="col-md-9 col-main">
            <div class='clearfix mrb30 jobs-wrap Module Module-151'>
                <div class='ModuleContent'>
                    <div class="job-specical">
                        <h1 class="title-page">Chương trình - Dịch vụ</h1>
                        
                    </div>
                </div>
            </div><div class='Module Module-150'>
                <div class='ModuleContent'>
                    <div class="job-list table-responsive">
                        <table class="table table-striped text-center">
                            <tr>
                                <th class="text-left">Tên chương trình</th>
                                <th class="text-center">Mô tả</th>
              
                            </tr>
                            @if (Model.Count > 0)
                            {
                                foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td class="text-left">
                                            <a href="/chuong-trinh-dich-vu/chi-tiet/@item.ID" target="_self" title="@item.Name">@item.Name</a>
                                        </td>
                                        <td>@item.Description</td>
                                       
                                    </tr>
                                }
                            }
                        </table>
                    </div>
                    <div id="ctl00_mainContent_ctl01_ctl00_divPager" class="pages newspager">
                        <div class='modulepager'>

                            @if (Model.TotalPages > 1)
                            {
                                // Create numeric links
                                var startPageIndex = Math.Max(1, Model.Page - Model.MaxPage / 2);
                                var endPageIndex = Math.Min(Model.TotalPages, Model.Page + Model.MaxPage / 2);

                                <nav>
                                    <ul class="pagination">
                                        @if (Model.Page > 1)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="?page=1" aria-label="First">
                                                    <i class="fa fa-angle-double-left"></i>
                                                </a>
                                            </li>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=@(Model.Page-1)" aria-label="Previous">
                                                    <i class="fa fa-angle-double-left"></i>
                                                </a>
                                            </li>
                                        }
                                        @for (int i = startPageIndex; i <= endPageIndex; i++)
                                        {
                                            if (Model.Page == i)
                                            {
                                                <li class="active page-item"><a class="page-link" href="?page=@i" title="Trang @i">@i</a></li>
                                            }
                                            else
                                            {
                                                <li class="page-item"><a class="page-link" href="?page=@i" title="Trang @i">@i</a></li>
                                            }
                                        }
                                        @if (Model.Page < Model.TotalPages)
                                        {
                                            <li class="page-item">
                                                <a class="page-link" href="?page=@(Model.Page+1)" aria-label="Next">
                                                    <i class="fa fa-angle-double-right"></i>
                                                </a>
                                            </li>
                                            <li class="page-item">
                                                <a class="page-link" href="?page=@Model.TotalPages" aria-label="Last">
                                                    <i class="fa fa-angle-double-right"></i>
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                            }

                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div id="ctl00_divRight" class="col-md-3 col-right cmszone">
            <div class='clearfix mrb20 lien-ket Module Module-143'><div class='ModuleContent'><h2 class='module-title'>Liên kết</h2><a href="/dang-ky" ><img alt="" src="~/Assets/pages/Data/Sites/1/media/lien-ket/lien-ket-01.jpg" /></a><a href="http://jvb.com.vn/" target="_blank"><img alt="" src="~/Assets/pages/Data/Sites/1/media/lien-ket/lien-ket-02.png" /></a></div></div><div class='clearfix mrb30 quy-trinh Module Module-144'>
                <div class='ModuleContent'>
                    <h2 class='module-title'>Quy trình</h2><table>
                        <tbody>
                            <tr>
                                <td>
                                    <em class="fa fa-newspaper-o"></em>
                                </td>
                                <td>
                                    <a href="/quy-trinh-tuyen-dung">Tìm hiểu về quy trình tuyển chọn, hồ sơ và thủ tục</a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </section>
</main>

