
@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var customer = (StudyAbroad.Data.Models.CustomerView)ViewBag.Detail;
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Chi tiết khách hàng
        </h1>
        <ol class="breadcrumb">
            <li><a href="/admin"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="/admin/customer">Khách hàng</a></li>
            <li class="active">Chi tiết khách hàng</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">

                <!-- Profile Image -->
                <div class="box box-primary">
                    <div class="box-body box-profile">
                        <img class="profile-user-img img-responsive img-circle" src="@customer.Avatar" alt="User profile picture">

                        <h3 class="profile-username text-center">@customer.Name</h3>

                        <ul class="list-group list-group-unbordered">
                            <li class="list-group-item">
                                <b>Email:</b> <a class="pull-right">@customer.Email</a>
                            </li>
                            <li class="list-group-item">
                                <b>Địa chỉ:</b> <a class="pull-right">@customer.Address</a>
                            </li>
                            <li class="list-group-item">
                                <b>Số điện thoại:</b> <a class="pull-right">@customer.Phone</a>
                            </li>
                            <li class="list-group-item">
                                <b>Giới tính:</b> <a class="pull-right">@(customer.Gender == 1 ? "Nam" :"Nữ")</a>
                            </li>
                        </ul>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
                <!-- About Me Box -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Thông tin đơn hàng</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <strong><i class="fa fa-book margin-r-5"></i>Tên đơn hàng:</strong>
                        <p class="text-muted">
                            @customer.OrderName
                        </p>   <img src="@customer.OrderImage" style="width:60px;" />
                        <hr>
                        <strong><i class="fa fa-file-text-o margin-r-5"></i>Mức lương:</strong>
                        <p>@String.Format("{0:#,##0}", customer.OrderSalary) triệu</p>
                        <hr>
                        <strong><i class="fa fa-file-text-o margin-r-5"></i> Chi phí:</strong>
                        <p>@String.Format("{0:#,##0}", customer.OrderPrice) triệu</p>
                        <hr>
                        <strong><i class="fa fa-file-text-o margin-r-5"></i> Ngày tuyển:</strong>
                        <p>@String.Format("{0:dd/MM/yyyy}", customer.OrderTestDay)</p>
                        <hr>
                        <strong><i class="fa fa-file-text-o margin-r-5"></i> Địa điểm:</strong>
                        <p class="text-muted">
                            @customer.OrderAddress
                        </p>
                        <div class="col-lg-4">
                            <a class="btn btn-danger" href="@Url.Action("Index", "Customer", new { Area = "Admin" })">Quay lại</a>
                        </div>
                    </div>

                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <div class="col-md-3"></div>
        </div>
        <!-- /.row -->

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
