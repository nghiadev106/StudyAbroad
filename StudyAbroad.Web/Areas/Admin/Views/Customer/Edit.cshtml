@model StudyAbroad.Web.Models.CustomerViewModel
@{
    ViewBag.Title = "Cập nhật khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<input type="hidden" id="success" value="@TempData["success"]" />
<input type="hidden" id="info" value="@TempData["info"]" />
<input type="hidden" id="warning" value="@TempData["warning"]" />
<input type="hidden" id="error" value="@TempData["error"]" />

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Cập nhật khách hàng
        </h1>
        <ol class="breadcrumb">
            <li><a href="Admin/Home/Index"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="Admin/Customer/Index">Khách hàng</a></li>
            <li class="active"> Cập nhật khách hàng</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-body">
                        @using (Html.BeginForm("Edit", "Customer", FormMethod.Post, new { Area = "Admin", enctype = "multipart/form-data" }))
                        {
                            <div class="col-xs-8">
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Tên khách hàng</label>
                                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "txtName" })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Số điện thoại</label>
                                    @Html.TextBoxFor(model => model.Phone, new { type = "number", @class = "form-control decimalnumber" })
                                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Địa chỉ Email</label>
                                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Địa chỉ</label>
                                    @Html.TextAreaFor(model => model.Address, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Đơn hàng</label><br />
                                    @Html.DropDownListFor(model => model.OrderID, (IEnumerable<SelectListItem>)@ViewBag.categoryList, "-Chọn đơn hàng-", new { @class = "form-control chosen-select" })
                                    @Html.ValidationMessageFor(model => model.OrderID, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Ngày sinh:</label>
                                    @Html.TextBoxFor(model => model.DOB, "{0:yyyy-MM-ddTHH:mm:ss}", new { @class = "form-control", @type = "datetime-local" })
                                    @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Giới tính :</label>
                                    <p>
                                        Nam:   @Html.RadioButton("Gender", "1", new { @checked = "checked" })
                                        Nữ: @Html.RadioButton("Gender", "0")
                                    </p>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Ảnh đại diện</label>
                                    <input type="file" name="LogoFile" class="form-control" />
                                    @Html.ValidationMessageFor(model => model.LogoFile, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">Trạng thái</label>
                                    <select class="form-control" id="Status" name="Status">
                                        @if (Model.Status == 1)
                                        {
                                            <option value="1" selected>Hoạt động</option>
                                            <option value="0">Khóa</option>
                                        }
                                        else
                                        {
                                            <option value="1">Hoạt động</option>
                                            <option value="0" selected>Khóa</option>
                                        }
                                    </select>
                                </div>

                                <div class="form-group">
                                    <div class="col-lg-4">
                                        <input type="submit" value="Cập nhật" class="btn btn-success" />
                                    </div>
                                    <div class="col-lg-4">
                                        <a class="btn btn-danger" href="@Url.Action("Index", "Customer", new { Area = "Admin" })">Quay lại</a>
                                    </div>
                                </div>

                            </div>


                        }

                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>

