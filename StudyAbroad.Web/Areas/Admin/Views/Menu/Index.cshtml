
@{
    ViewBag.Title = "Menu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    var lstMenus = (List<StudyAbroad.Web.Models.MenuViewModel>)ViewBag.ListMenu;
}
<input type="hidden" id="success" value="@TempData["success"]" />
<input type="hidden" id="info" value="@TempData["info"]" />
<input type="hidden" id="warning" value="@TempData["warning"]" />
<input type="hidden" id="error" value="@TempData["error"]" />

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Menu
        </h1>
        <ol class="breadcrumb">
            <li><a href="Admin/Home/Index"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="Admin/Product/Index">Menu</a></li>
            <li class="active">Danh sách menu </li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"> <a class="btn btn-primary" href="@Url.Action("Create", "Menu", new { Area = "Admin" })">Thêm mới</a></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Tên Menu</th>
                                    <th>URL</th>
                                    <th>Thứ tự</th>
                                    <th>Trạng thái</th>
                                    <th>#</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var stt = 0;
                                    foreach (var item in lstMenus)
                                    {
                                        <tr>
                                            <td>@Html.Raw(stt = stt + 1)</td>
                                            <td>@item.Name</td>
                                            <td>@item.URL</td>
                                            <td>@item.Description</td>                                         
                                            @if (item.Status == 1)
                                            {
                                                <td><span class="btn-success">Hiển thị</span></td>
                                            }

                                            else
                                            {
                                                <td><span class="btn-danger">Ẩn</span></td>
                                            }
                                            <td>
                                                <a href="/Admin/Menu/Edit/@item.ID" class="btn btn-primary glyphicon glyphicon-edit"></a>
                                                <a class="btn btn-danger glyphicon glyphicon-trash" onclick="return confirm('Bạn có muốn xóa không?');" href="@Url.Action("Delete","Menu")/@item.ID"></a>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>


