@model StudyAbroad.Web.Models.MenuViewModel
@{
    ViewBag.Title = "Sửa menu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<input type="hidden" id="success" value="@TempData["success"]" />
<input type="hidden" id="info" value="@TempData["info"]" />
<input type="hidden" id="warning" value="@TempData["warning"]" />
<input type="hidden" id="error" value="@TempData["error"]" />
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Cập nhật Menu
        </h1>
        <ol class="breadcrumb">
            <li><a href="Admin/Home/Index"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
            <li><a href="Admin/Menu/Index">Menu</a></li>
            <li class="active">Cập nhật Menu</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <!-- /.box-header -->
                    <div class="box-body">
                        @using (Html.BeginForm("Edit", "Menu", FormMethod.Post, new { Area = "Admin", enctype = "multipart/form-data" }))
                        {
                        <div class="col-md-8">
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="exampleInputEmail1">Tên Menu</label>
                                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @id = "txtName" })
                                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">URL</label>
                                @Html.TextBoxFor(model => model.URL, new { @class = "form-control", @id = "txtUrl" })
                                @Html.ValidationMessageFor(model => model.URL, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Thứ tự</label>
                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @type = "number" })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Trạng thái</label>
                                <select class="form-control" id="Status" name="Status">
                                    @if (Model.Status == 1)
                                    {
                                        <option value="1" selected>Hoạt động</option>
                                        <option value="0">Khóa</option>
                                    }
                                    else
                                    {
                                        <option value="1">Hoạt động</option>
                                        <option value="0" selected>Khóa</option>
                                    }
                                </select>
                            </div>

                            <div class="form-group">
                                <div class="col-lg-4">
                                    <input type="submit" value="Cập nhật" class="btn btn-success" />
                                </div>
                                <div class="col-lg-4">
                                    <a class="btn btn-danger" href="@Url.Action("Index", "Menu", new { Area = "Admin" })">Quay lại</a>
                                </div>
                            </div>
                        </div>

                        }
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>




